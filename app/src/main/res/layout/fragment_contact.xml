<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:label="@string/about"
    tools:context="com.sourcey.materiallogindemo.Contact"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textStyle="normal|bold"
            android:textColor="@color/wallet_link_text_light"
            android:text="    This App is developed by Team_091 as a part of Project Deep Blue by Mastek. "
            android:layout_below="@+id/textView"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"
            android:layout_height="75dp" />

        <TextView
            android:text="DEVELOPERS : Team_091 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:textColor="@android:color/black"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text=" Ronak Doshi"
            android:layout_width="wrap_content"
            android:layout_below="@+id/textView3"
            android:id="@+id/textView4"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textAlignment="viewStart"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"
            android:layout_height="50dp" />

        <TextView
            android:text="Contact : ronak01doshi@gmail.com"
            android:layout_width="wrap_content"
            android:id="@+id/textView5"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:textSize="25sp"
            android:layout_alignParentBottom="true"
            android:layout_height="70dp"
            android:textAlignment="center" />

        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon"
            android:layout_marginTop="72dp"
            android:id="@+id/imagelogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/mastek_logo"
            android:layout_alignTop="@+id/imagelogo"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:id="@+id/imageView2" />

        <TextView
            android:text="Voluncheerâ„¢"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"

            android:layout_gravity="center_vertical|center_horizontal"
            android:textSize="30sp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="normal|bold|italic"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/imagelogo"
            android:layout_alignLeft="@+id/imagelogo"
            android:layout_alignStart="@+id/imagelogo" />

    </RelativeLayout>

</ScrollView>
