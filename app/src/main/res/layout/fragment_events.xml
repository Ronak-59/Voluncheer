<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@android:color/holo_blue_light"
    android:layout_marginTop="60dp">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@android:color/white"
        android:layout_margin="10dp">

        <ImageView
            app:srcCompat="@drawable/gps"
            android:id="@+id/gps"
            android:layout_margin="20dp"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter Location ..."
            android:ems="10"
            android:id="@+id/enter_location"
            android:layout_margin="20dp"
            android:layout_width="240dp"
            android:layout_weight="0.22" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            app:srcCompat="@drawable/mastek_logo"
                            android:id="@+id/event_pic1"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:paddingTop="10dp"
                            android:paddingStart="10dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:text="Project Deep Blue Grand Finale"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:id="@+id/event_name1"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:textSize="18sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:text="Mastek"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/event_organizer1"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:paddingLeft="10dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:text="This event is about the Grand Finale of Project DeepBlue Season 5 of Mastek. Various teams from different colleges participated in this project"
                        android:layout_width="match_parent"
                        android:id="@+id/event_detail1"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="18sp"
                        android:layout_height="70dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Time: 6 Hrs"
                            android:layout_height="wrap_content"
                            android:id="@+id/event_time1"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="18sp"
                            android:layout_width="wrap_content" />
                        <Button
                            android:layout_height="wrap_content"
                            android:text="View"
                            android:id="@+id/event_view1"
                            android:layout_width="90dp" />
                        <TextView
                            android:text="Navi Mumbai"
                            android:layout_width="124dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/location1"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            app:srcCompat="@drawable/icon"
                            android:id="@+id/event_pic2"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:paddingTop="10dp"
                            android:paddingStart="10dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
