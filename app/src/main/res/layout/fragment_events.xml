                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:id="@+id/event_name2"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:textSize="18sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:text="NSS"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/event_organizer2"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:paddingLeft="10dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:text="This event is about the Volunteering activity of NSS. Various teams from different colleges participated in this project"
                        android:layout_width="match_parent"
                        android:id="@+id/event_detail2"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="18sp"
                        android:layout_height="70dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Time: 3 Hrs"
                            android:layout_height="wrap_content"
                            android:id="@+id/event_time2"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="18sp"
                            android:layout_width="wrap_content" />
                        <Button
                            android:layout_height="wrap_content"
                            android:text="View"
                            android:id="@+id/event_view2"
                            android:layout_width="90dp" />
                        <TextView
                            android:text="Mumbai"
                            android:layout_width="124dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/location2"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            app:srcCompat="@drawable/mastek_logo"
                            android:id="@+id/event_pic3"
                            android:layout_width="75dp"
