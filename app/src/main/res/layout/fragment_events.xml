                                android:id="@+id/event_organizer4"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:paddingLeft="10dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:text="This event is about the Grand Finale of Project DeepBlue Season 5 of Mastek. Various teams from different colleges participated in this project"
                        android:layout_width="match_parent"
                        android:id="@+id/event_detail4"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="18sp"
                        android:layout_height="70dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Time: 6 Hrs"
                            android:layout_height="wrap_content"
                            android:id="@+id/event_time4"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="15dp"
                            android:textSize="18sp"
                            android:layout_width="wrap_content" />
                        <Button
                            android:layout_height="wrap_content"
